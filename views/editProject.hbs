<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="stylesheet" href="/assets/css/style.css">
    <title>Document</title>
</head>

<body class="bg-secondary bg-opacity-10">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="/assets/img/logo (3).png" alt="LogoBrand">
            </a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item ms-3">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item ms-3">
                        <a class="nav-link active fw-bolder text-success" href="/addProject">Add Project</a>
                    </li>
                </ul>
                <div class="d-flex contactMe-link">
                    <a href="/contact-me">Contact Me</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- create project -->
    <div class="container">
        <div class="px-5 my-5 formInputContainer ">
            <form action="/updateProject" method="post">
                <h3 class="fw-bold text-success text-center">Update Project</h3>

                <div class="mb-3">
                    <label for="titleProject" class="form-label fw-bolder">Title Project</label>
                    <input type="text" name="titleProject" class="form-control" id="titleProject"
                        value="{{data.titleProject}}" placeholder="Type title here...">
                    <input type="hidden" name="idProject" class="form-control" id="idProject"
                        value="{{data.idProject}}">
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label for="startProject" class="form-label fw-bolder">Start Project</label>
                        <input type="date" name="startProject" class="form-control" id="startProject"
                            value="{{data.start_Project}}">
                    </div>
                    <div class="col">
                        <label for="endProject" class="form-label fw-bolder">End Project</label>
                        <input type="date" name="endProject" class="form-control" id="endProject"
                            value="{{data.end_Project}}">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="descriptionbody" class="form-label fw-bolder">Description</label>
                    <textarea class="form-control" name="bodyProject" style="resize: none;" id="descriptionbody"
                        rows="3" value="">{{data.bodyProject}}</textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bolder">Technologies</label>

                    <div class="row row-cols-2 ms-0 me-auto mb-3">

                        <div class="form-check">
                            <input class="col form-check-input" name="checkboxs" type="checkbox"
                                value="fa-brands fa-angular" id="angular" {{#each data.checkBoxs}}{{isAngular
                                this}}{{/each}}>
                            <label class="form-check-label" for="angular">
                                Angular
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="col form-check-input" name="checkboxs" type="checkbox"
                                value="fa-brands fa-react" id="reactjs" {{#each data.checkBoxs}}{{isReact
                                this}}{{/each}}>
                            <label class="col form-check-label" for="reactjs">
                                React JS
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="col form-check-input" name="checkboxs" type="checkbox"
                                value="fa-brands fa-vuejs" id="vuejs" {{#each data.checkBoxs}}{{isVue this}}{{/each}}>
                            <label class="form-check-label" for="vuejs">
                                Vue JS
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" name="checkboxs" type="checkbox"
                                value="fa-brands fa-node-js" id="nodejs" {{#each data.checkBoxs}}{{isNode
                                this}}{{/each}}>
                            <label class="form-check-label" for="nodejs">
                                Node JS
                            </label>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" name="" class="form-label fw-bolder">Upload Image</label>
                    <div class="input-group mb-3">
                        <input type="file" class="form-control" id="inputGroupFile02">
                        <label class="input-group-text bg-body border-start-0" for="inputGroupFile02"><img
                                src="/assets/img/file.png" alt="file" /></label>
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-5">
                    <button type="button" class="btn btn-success rounded-pill px-5 py-2 fw-bolder"
                        data-bs-toggle="modal" data-bs-target="#editModal">UPDATE</button>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="modalConfirm" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-body text-center pt-5" id="modalConfirm">
                                <span class="text-success fw-bold" style="font-size: 28px;">Save Changes</span><br>
                                Do you want save changes before exit ?
                            </div>
                            <div class="modal-footer border-0 justify-content-between">
                                <button type="button" class="btn btn-outline-secondary px-5"
                                    data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-success px-5">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

<script src="assets/js/myProject.js"></script>

</html>